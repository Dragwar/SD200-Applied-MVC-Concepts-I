@model CourseDetailsViewModel

@{
    ViewBag.Title = "Course Details";
}

<h2>@Model.Name</h2>

<div>
    <h4>@ViewBag.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NumberOfHours)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfHours)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NumberOfEnrollments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfEnrollments)
        </dd>

        @if (Model.NumberOfEnrollments >= 1)
        {
            <dt>
                Enrolled @((Model.NumberOfEnrollments > 1 ? "Users" : "User"))
            </dt>

            <dd>
                @Model.GetAllEnrolledUsersNamesAsString
            </dd>
        }

    </dl>
</div>

<p>
    @Html.ActionLink("Back to List of Courses", "Index", "Course", new { @class = "btn btn-primary" })
</p>
